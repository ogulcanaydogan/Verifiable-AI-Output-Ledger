FROM golang:1.24-alpine AS builder

WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /vaol-proxy ./cmd/vaol-proxy

FROM alpine:3.20
RUN apk --no-cache add ca-certificates
COPY --from=builder /vaol-proxy /vaol-proxy

EXPOSE 8443
ENTRYPOINT ["/vaol-proxy"]
