FROM golang:1.24-alpine AS builder

WORKDIR /build
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /vaol-server ./cmd/vaol-server

FROM alpine:3.20
RUN apk --no-cache add ca-certificates
COPY --from=builder /vaol-server /vaol-server

EXPOSE 8080
ENTRYPOINT ["/vaol-server"]
